<%- include("partials/authHeader.ejs") %>
	<div class="content">
		<form action="/login" method="POST">
			<fieldset>
				<h1 class="loginText">Login</h1>
				<div class="form-group">
					<p for="email">Email address</p>
					<div class="input-group input-group-lg">
						<input class="form-control" type="email" name="username" class="input" required placeholder="abc@domain.com">
					</div>
				</div>
				<div class="form-group">
					<p for="password">Password</p>
					<div class="input-group input-group-lg">
						<input class="form-control" type="password" name="password" class="input" required minlength="8"
							maxlength="16" placeholder="********">
					</div>
				</div>
				<div class="form-group">
					<p>Don't have an account?</p>
					<a href="/register" class="query">Sign-up here</a>
				</div>
				<button type="submit" class="section-btn btn" style="background-color: #1dc9e3;"
					data-wow-delay="1s">Login</button>
			</fieldset>
		</form>
	</div>
	<%- include("partials/authFooter.ejs") %>